<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/gray_popup_bar" android:layout_width="fill_parent" android:layout_height="fill_parent" android:minWidth="@dimen/dialog_width"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:background="@color/gray_popup_bar" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/extra_large_text" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:id="@id/title" android:padding="@dimen/box_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/time" android:singleLine="true" />
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <net.simonvt.datepicker.DatePicker android:gravity="center_horizontal" android:id="@id/datePicker" android:background="@color/gray_popup_bar" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <net.simonvt.timepicker.TimePicker android:gravity="center_horizontal" android:id="@id/timePicker" android:background="@color/gray_popup_bar" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    </LinearLayout>
    <include android:layout_width="fill_parent" android:layout_height="wrap_content" layout="@layout/cancel_ok_buttons" />
</LinearLayout>