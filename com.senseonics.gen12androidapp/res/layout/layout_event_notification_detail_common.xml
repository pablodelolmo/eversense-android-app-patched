<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:orientation="horizontal" android:id="@id/topItemLayout" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/extra_large_text" android:textStyle="bold" android:textColor="@color/black" android:gravity="center" android:id="@id/eventType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/calibrate_now_notification_title" android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:weightSum="4.0">
        <ImageView android:id="@id/notificationImageView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/small_margin" android:src="@drawable/calibrate_menu_icon" android:scaleType="fitEnd" android:layout_weight="1.0" />
        <TextView android:textSize="@dimen/large_text" android:textColor="@color/black" android:id="@id/eventDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/small_margin" android:layout_weight="3.0" />
    </LinearLayout>
    <TextView android:textSize="@dimen/large_text" android:textColor="@color/black" android:gravity="center" android:id="@id/notificationECNo" android:paddingBottom="@dimen/box_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textAlignment="center" />
</LinearLayout>